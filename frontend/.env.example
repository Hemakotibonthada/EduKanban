# ========================================
# EduKanban Frontend Environment Variables
# Copy this file to .env and update the values
# ========================================

# API Configuration
VITE_API_BASE_URL=http://localhost:5001/api
VITE_SOCKET_URL=http://localhost:5001

# Application Configuration
VITE_APP_NAME=EduKanban
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=AI-Driven Personalized Learning Platform

# Development Configuration
VITE_DEV_MODE=true
VITE_DEBUG=true

# Feature Flags
VITE_ENABLE_AI_FEATURES=true
VITE_ENABLE_CHAT=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_GAMIFICATION=true
VITE_ENABLE_CERTIFICATES=true

# Third-party Services
VITE_GOOGLE_ANALYTICS_ID=your-ga-id-here
VITE_SENTRY_DSN=your-sentry-dsn-here

# Production URLs (update when deploying)
# VITE_API_BASE_URL=https://your-backend-domain.com/api
# VITE_SOCKET_URL=https://your-backend-domain.com

# PWA Configuration
VITE_PWA_NAME=EduKanban
VITE_PWA_SHORT_NAME=EduKanban
VITE_PWA_DESCRIPTION=AI-Driven Personalized Learning Platform

# File Upload Limits
VITE_MAX_FILE_SIZE=50
VITE_ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,txt

# Chat Configuration
VITE_MAX_MESSAGE_LENGTH=1000
VITE_TYPING_INDICATOR_TIMEOUT=3000

# Notification Configuration
VITE_NOTIFICATION_TIMEOUT=5000
VITE_ENABLE_BROWSER_NOTIFICATIONS=true

# Note: If API URLs are not set, the app will automatically use the current hostname
# This allows it to work on localhost, network IP, and mobile devices automatically
# Only set VITE_API_BASE_URL and VITE_SOCKET_URL if you need to override the automatic detection