# ========================================
# EduKanban Backend Environment Variables
# Copy this file to .env and update the values
# ========================================

# Server Configuration
PORT=5001
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/edukanban
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/edukanban

# JWT Configuration (REQUIRED - Change this!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Frontend URL (for CORS and other integrations)
FRONTEND_URL=http://localhost:3000

# OpenAI Configuration (REQUIRED for AI features)
OPENAI_API_KEY=your-openai-api-key-here

# Logging Configuration
LOG_LEVEL=info

# File Upload Configuration
MAX_FILE_SIZE=50mb
UPLOAD_PATH=uploads/

# Email Configuration (Optional - for notifications)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# Security Configuration
SESSION_SECRET=your-session-secret-key-change-this-in-production

# Production URLs (update when deploying)
# FRONTEND_URL=https://your-frontend-domain.com
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/edukanban