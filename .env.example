# ==============================================
# EduKanban Environment Configuration Template
# ==============================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!

# ==============================================
# SERVER CONFIGURATION
# ==============================================
PORT=5001
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
# MongoDB connection string
# Local: mongodb://localhost:27017/edukanban
# Atlas: mongodb+srv://username:password@cluster.mongodb.net/edukanban
MONGODB_URI=mongodb://localhost:27017/edukanban

# ==============================================
# AUTHENTICATION & SECURITY
# ==============================================
# Secret key for JWT tokens (use a long random string)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# JWT token expiration time
JWT_EXPIRES_IN=7d

# Session secret for express-session (if using sessions)
SESSION_SECRET=your-super-secret-session-key-change-this

# CORS allowed origins (comma-separated)
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# ==============================================
# OPENAI API CONFIGURATION
# ==============================================
# OpenAI API key for AI-powered features
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# OpenAI model to use
OPENAI_MODEL=gpt-4

# Maximum tokens for OpenAI responses
OPENAI_MAX_TOKENS=2000

# ==============================================
# EMAIL CONFIGURATION (Optional)
# ==============================================
# Email service for sending notifications
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=EduKanban <noreply@edukanban.com>

# ==============================================
# FILE UPLOAD CONFIGURATION
# ==============================================
# Maximum file size in MB
MAX_FILE_SIZE=10

# Allowed file types (comma-separated MIME types)
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,video/mp4

# Upload directory
UPLOAD_DIR=uploads

# ==============================================
# CLOUDINARY CONFIGURATION (Optional)
# ==============================================
# For cloud-based file storage
# Get credentials from: https://cloudinary.com
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# ==============================================
# REDIS CONFIGURATION (Optional)
# ==============================================
# Redis for caching and session management
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ==============================================
# RATE LIMITING
# ==============================================
# Maximum requests per window
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Auth rate limiting (stricter)
AUTH_RATE_LIMIT_MAX=5
AUTH_RATE_LIMIT_WINDOW_MS=900000

# ==============================================
# LOGGING CONFIGURATION
# ==============================================
# Log level: error, warn, info, http, verbose, debug, silly
LOG_LEVEL=info

# Log directory
LOG_DIR=logs

# Log to console
LOG_TO_CONSOLE=true

# Log to file
LOG_TO_FILE=true

# ==============================================
# MONITORING & ANALYTICS (Optional)
# ==============================================
# Sentry DSN for error tracking
# Get from: https://sentry.io
SENTRY_DSN=

# Google Analytics tracking ID
GA_TRACKING_ID=

# ==============================================
# PAYMENT GATEWAY (Optional)
# ==============================================
# Stripe configuration
# Get keys from: https://dashboard.stripe.com/apikeys
STRIPE_PUBLIC_KEY=pk_test_your-public-key
STRIPE_SECRET_KEY=sk_test_your-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# PayPal configuration
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=sandbox

# ==============================================
# VIDEO STREAMING (Optional)
# ==============================================
# YouTube API for video recommendations
YOUTUBE_API_KEY=your-youtube-api-key

# Vimeo configuration
VIMEO_ACCESS_TOKEN=your-vimeo-token

# ==============================================
# THIRD-PARTY INTEGRATIONS (Optional)
# ==============================================
# Zoom API for live classes
ZOOM_API_KEY=your-zoom-api-key
ZOOM_API_SECRET=your-zoom-api-secret

# Twilio for SMS notifications
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=+1234567890

# ==============================================
# FEATURE FLAGS
# ==============================================
# Enable/disable features
ENABLE_AI_FEATURES=true
ENABLE_SOCIAL_FEATURES=true
ENABLE_GAMIFICATION=true
ENABLE_CERTIFICATES=true
ENABLE_VIDEO_UPLOADS=false
ENABLE_LIVE_CLASSES=false

# ==============================================
# DEVELOPMENT & DEBUGGING
# ==============================================
# Enable debug mode
DEBUG=false

# Enable API request logging
LOG_API_REQUESTS=true

# Enable database query logging
LOG_DB_QUERIES=false

# Mock external APIs (for testing)
MOCK_EXTERNAL_APIS=false

# ==============================================
# PRODUCTION SETTINGS
# ==============================================
# Set to true in production
IS_PRODUCTION=false

# Trust proxy (if behind reverse proxy like nginx)
TRUST_PROXY=false

# Helmet security headers (recommended: true)
ENABLE_HELMET=true

# CSRF protection (recommended: true)
ENABLE_CSRF=true

# ==============================================
# BACKUP & MAINTENANCE
# ==============================================
# Automatic backup schedule (cron format)
BACKUP_SCHEDULE=0 2 * * *

# Backup directory
BACKUP_DIR=backups

# Database maintenance window
MAINTENANCE_MODE=false

# ==============================================
# NOTES
# ==============================================
# 1. Never commit .env file to version control
# 2. Use strong, unique secrets in production
# 3. Rotate secrets regularly
# 4. Keep this file in sync with actual .env
# 5. Document any new environment variables here
